{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:ts": "tsc",
    "build": "npm run build:ts && npm run build:css",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "watch:ts": "tsc --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "20.5.0",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.408.0",
    "postcss-cli": "^11.0.0",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
